%section.text-gray-600.body-font.overflow-hidden.px-5.md:py-10
  .mx-auto.flex.flex-col.flex-wrap.md:flex-row.md:flex-nowrap.justify-center{:class => "lg:w-4/5"}
    .lg:px-10.lg:py-6.mt-6.lg:mt-0.lg:h-auto.h-64.flex.flex-col.justify-center.flex-shrink.relative{:class => "lg:w-1/2"}
      - if @profile.avatar.url.present?
        = image_tag @profile.avatar, alt:  "avatar", class: "object-cover object-center rounded-full p-10"
      - if @profile.user.donated?
        .flex.justify-center.item-center.flex-col.absolute.bottom-0.w-20{class: "right-1/4"}
          = image_tag "dispensary_portal/approved.svg", alt: "approved"
          .text-2xl.font-bold.align-text-middle= t('views.dispensary_portal.donator')
    .w-full.lg:px-10.lg:py-6.mt-6.lg:mt-0.md:mt-64.sm:mt-64.xs:mt-64{:class => "lg:w-1/2"}
      .justify-center.items-center.flex.mt-10
        %h1.text-gray-900.text-3xl.title-font.font-medium.mb-1
          #{@profile.first_name} #{@profile.last_name}
      .flex.justify-end.items-end.text-sm.font-light
        = @profile.user.id.to_s.rjust(8, "0")
      .flex.mx-auto.mt-8.justify-around.items-center
        .text-gray-700.font-medium.text-2xl
          = t('views.dispensary_portal.current_study')
        - if @profile.active_study
          .text-gray-800.font-medium.text-2xl #{@profile.active_study.study.title}
        - else
          .text-red-900.font-medium.text-2xl NO STUDY
      .flex.flex-row.justify-around.w-full
        %button.py-4.rounded.border-primary-400.border-2.flex-grow.m-2.bg-primary-400.bg-opacity-25{ "data-action" => "click->dispensary#materialScreen"}= t('forms.next')
        %button.py-4.rounded.border-red-400.border-2.flex-grow.m-2.bg-red-400.bg-opacity-25{ "data-action" => "click->dispensary#searchScreen"}= t('forms.cancel')
