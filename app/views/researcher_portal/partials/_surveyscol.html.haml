.h-full.flex.flex-col.px-1.flex-grow.mb-2.md:mb-0
  / Surveys Section
  .h-full.flex.flex-col.bg-gray-300.rounded-xl.justify-space-between.items-center.p-2
    %span.w-full.h-full.flex-grow.flex.flex-col.pb-2
      / Title
      .text-sm.text-gray-600.mb-3.text-center.capitalize.md:text-2xl #{t('views.researcher_portal.title2')}
      - if local_assigns[:s].empty?
        .w-full.text-center.flex.flex-col.justify-center.flex-grow
          #{t('views.researcher_portal.empty2')}
      - else
        / Cards
        = render 'researcher_portal/partials/surveylist', s: local_assigns[:s], selected: local_assigns[:selected]
        / Action Button Footer
    .flex.justify-center.px-6.py-2.bg-gray-100.rounded-md
      = link_to t('views.researcher_portal.create'), add_survey_path, method: :post
