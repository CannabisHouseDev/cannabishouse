            %h3.text-xl.mb-3.tracking-tight.font-extrabold.text-gray-900.sm:text-xl.md:text-2xl.leading-relaxed.text-right= t('.instructions.firstStep.title')
            %p.text-gray-600= t('.instructions.firstStep.content')
          .flex-col.pl-4.md:pl-12
            .rounded-full.ring-4.bg-white.ring-primary.w-16.md:w-28.h-16.md:h-28.flex.justify-center.items-center.text-black.font-bold.text-xl.md:text-3xl= 1
        .w-full.p-6{:class => "hidden lg:block lg:w-1/2"}
          =image_tag 'landing-page/1.svg', alt: '1', class: "w-48"


    -# Second step
    %div{"data-aos" => "fade-left"}
      .flex.flex-wrap.py-8.animate__animated.animate__fadeInRight
        .w-full{:class => "lg:w-1/2  hidden lg:block"}
