          .flex-col.pl-4.md:pl-12
            %h3.text-xl.mb-3.tracking-tight.font-extrabold.text-gray-900.sm:text-xl.md:text-2xl.leading-relaxed.text-left= t('.instructions.secondStep.title')
            %p.text-gray-600= t('.instructions.secondStep.content')

    -# Third step
    %div{"data-aos" => "fade-right"}
      .flex.flex-wrap.py-8
        .text-right.flex.justify-center.align-center.items-center{:class => "lg:w-1/2"}
          .block.lg:flex-col
            %h3.text-xl.mb-3.tracking-tight.font-extrabold.text-gray-900.sm:text-xl.md:text-2xl.leading-relaxed.text-right= t('.instructions.thirdStep.title')
            %p.text-gray-600= t('.instructions.thirdStep.content')
          .flex-col.pl-4.md:pl-12
            .rounded-full.ring-4.bg-white.ring-primary.w-16.md:w-28.h-16.md:h-28.flex.justify-center.items-center.text-black.font-bold.text-xl.md:text-3xl= 3
        .w-full{:class => "lg:w-1/2  hidden lg:block"}
          =image_tag 'landing-page/3.svg', alt: '3', class: "w-48"

    -# Fourth step
    %div{"data-aos" => "fade-left"}
      .flex.flex-wrap.py-8.animate__animated.animate__fadeInRight
        .w-full{:class => "lg:w-1/2  hidden lg:block"}
          =image_tag 'landing-page/4.svg', alt: '4', class: "w-48 ml-auto"
        .text-left.flex.justify-center.align-center.items-center{:class => "lg:w-1/2"}
          .flex-col.pr-4
            .rounded-full.ring-4.bg-white.ring-primary.w-16.md:w-28.h-16.md:h-28.flex.justify-center.items-center.text-black.font-bold.text-xl.md:text-3xl= 4
          .flex-col.pl-4.md:pl-12
