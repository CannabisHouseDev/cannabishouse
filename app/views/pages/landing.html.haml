-# INSTRUCTION NEW
%section.mb-24.mt-24
  .container.overflow-hidden.px-8.md:px-24.mx-auto.m-8.text-xl.text-center
    %h2.text-4xl.tracking-tight.font-extrabold.text-gray-900.md:text-4xl.leading-relaxed.text-center
      = t('.instructions.title')
      %span.text-primary-600
        = t('.instructions.titleSecondPart')
    %p.text-gray-600.mt-3= t('.instructions.subheading')

    .w-full.mb-4
      .h-1.mx-auto.gradient.w-64.opacity-25.my-0.py-0.rounded-t

    -# First step
    %div{"data-aos" => "fade-right"}
      .block.lg:flex.flex-wrap.py-8
        .text-right.flex.justify-center.align-center.items-center{:class => "lg:w-1/2"}
