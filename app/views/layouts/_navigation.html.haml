.container.mx-auto{"data-controller" => "modal", "data-modal-allow-background-close" => "false"}
  .flex.mx-auto.justify-between.items-center.border-b-2.border-gray-100.py-6
    .flex.justify-start.items-center 
      = link_to main_app.root_path, class: 'p-1 mr-4' do
        %span.sr-only= t('.company.name')
        = image_tag 'logo.png', alt: 'Cannabis House Logo', class: "h-8 w-auto sm:h-10"
    %nav.hidden.md:flex.space-x-10.lg:contents.xl:contents
      - case current_user.profile.role
      - when 'participant'
        = link_to t('navbar.about'), about_path, class: "text-base p-4 font-medium text-gray-500 hover:text-gray-900"
        = link_to t('navbar.media'), media_path, class: "text-base p-4 font-medium text-gray-500 hover:text-gray-900"
      - when 'dispensary'
        = link_to t('navbar.billing'), main_app.dispensary_portal_path, class: "text-base font-medium text-gray-500 hover:text-gray-900"
        = link_to t('navbar.stock'), main_app.dispensary_portal_path, class: "text-base font-medium text-gray-500 hover:text-gray-900"
    %nav.flex.md:flex
      = render 'layouts/navlinks_for_auth'
