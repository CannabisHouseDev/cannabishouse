= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.rich_text_area :body
  .field
    = f.label :status
    = f.select :status, [:draft, :published, :blog, :archived]
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :post_date
    = f.datetime_select :post_date
  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :slug
    = f.text_field :slug
  .field
    = f.label :inner
    = f.check_box :inner
  .actions
    = f.submit t('views.posts.save')
