.w-full.h-full.flex.flex-col.items-center
  .container
    = render partial: 'admin_portal/partials/navbar'
    - @orders.each do |order|
      .flex.flex-col.justify-around.bg-red-100.border-2.border-red-400.rounded-2xl.my-8.p-4.md:flex-row.md:mx-18.md:my-8.lg:mx-30
        .flex.flex-col.md:w-60
          %p.mb-1.text-center.md:text-left Owner: #{order.user.profile.first_name} #{order.user.profile.last_name}
          %p.my-1.text-center.md:text-left  Status: #{order.status}
          %p.my-1.text-center.md:text-left Low on: #{order.order_materials.count} Material

          = form_for order, url:admin_portal_update_order_path(order) do |f|
            .h-full.flex.flex-row.justify-center.mb-3.md:mb-0
              .flex.flex-col
                = f.label :Status, class: 'Form-label text-base'
                = f.select :status, Order.statuses.keys.to_a, prompt: true, class: "bg-red-300 px-5 md:w-full text-center py-2 rounded-md"
              .flex
                = f.submit t('views.posts.save'), class: "form-control m-b text-base px-2 py-1 text-center rounded-md border border-black mt-6 ml-2"  
        .flex.justify-center
          %table.text-center
            %tr 
              %th.px-3.pb-1 Avaliable
              %th.px-3.pb-1 Material
              %th.px-3.pb-1 Order  
            - @order_details.where(order_id: order).each do |details|
              %tr 
                %td.px-4.py-1 #{details.material.weight}
                %td.px-4.py-1 #{details.material.name}
                %td.px-4.py-1
                  .border.border-black.rounded-md
                    = link_to  "2000", "#", class: "p-2"