.w-full.h-full.flex.flex-col.items-center
  .container
    = render partial: 'admin_portal/partials/navbar'
    -2.times do |j|
      .flex.flex-col.justify-around.bg-primary-100.border-2.border-primary-400.rounded-2xl.my-8.p-4.md:flex-row.md:mx-18.md:my-8.lg:mx-30
        .flex.flex-col.md:w-60
          %p.mb-1.text-center.md:text-left Dispensary Number ##{j}
          %p.my-1.text-center.md:text-left Owner: #{Faker::Name.first_name} #{Faker::Name.last_name}
          %p.my-1.text-center.md:text-left Low on: #{rand(1..10)} Material
          .h-full.flex.justify-center.items-center.mb-3.md:mb-0
            = link_to 'Create order', "#", class: "bg-primary-300 px-5 md:w-full text-center py-2 rounded-md"
        .flex.justify-center
          %table.text-center
            %tr 
              %th.px-3.pb-1 Avaliable
              %th.px-3.pb-1 Material
              %th.px-3.pb-1 Order
            - 4.times do |i|
              %tr 
                %td.px-4.py-1 #{rand(5..20)}
                %td.px-4.py-1 Material Name##{i}
                %td.px-4.py-1
                  .border.border-black.rounded-md
                    = link_to  "#{rand(40..100)}", "#"
