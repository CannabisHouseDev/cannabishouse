.input_group.flex.flex-col.justify-start
  - question = local_assigns[:q]
  %label.text-gray-700.text-sm.font-bold.capitalize #{question.question_text}
  - if question.default_text
    %label.text-gray-600.text-sm #{question.default_text}
  %input.w-full.rounded.border.py-2.px-3.text-gray-700.focus:outline-none{id: question.id, type: 'number', min: question.validation_rules[:minimum], max: question.validation_rules[:maximum], placeholder: question.placeholder}
