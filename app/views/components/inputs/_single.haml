.input_group.flex.flex-col.justify-start
  - question = local_assigns[:q]
  %label.text-gray-700.text-md.font-bold.capitalize.mb-1 #{question.title}
  - if question.description
    %label.text-gray-600.text-sm #{question.description}
  %select.w-full.rounded.border.py-2.px-3.text-gray-700.focus:outline-none{id: question.id}
    - question.options.each do |o|
      %option #{o.name}
