.input_group.flex.flex-col.justify-start
  - question = local_assigns[:q]
  %label.text-gray-700.text-sm.font-bold.capitalize #{question[:label]}
  - if question[:description]
    %label.text-gray-600.text-sm #{question[:description]}
  .flex.flex-row
    .flex.flex-col.justify-start.pr-2{class: 'w-1/2'}
      %label.text-gray-700.text-xs Min
      %input.rounded.border.py-2.px-3.text-gray-700.focus:outline-none{ id: question[:id], type: 'number', min: question[:min], max: question[:max], step: question[:step], placeholder: question[:min]}
    .flex.flex-col.justify-start.pl-2{class: 'w-1/2'}
      %label.text-gray-700.text-xs Max
      %input.rounded.border.py-2.px-3.text-gray-700.focus:outline-none{ id: question[:id], type: 'number', min: question[:min], max: question[:max], step: question[:step], placeholder: question[:min]}
