.w-full.p-8.grid.grid-cols-2.text-gray-600.h-full.text-xs.sm:text-base.md:text-xl.lg:text-2xl.xl:text-3xl.2xl:text-4xl
  .bg-gray-300.flex.flex-col.rounded-2xl
    
    %span.block.flex.justify-center.items-center.p-4
      Upcoming appointments
    - 3.times do 
      %input.rounded-xl.bg-gray-100.flex.flex-grow.m-4
    
    %span.block.flex.justify-center.items-end.p-12
      = link_to "Load All", "#", class: 'px-6 py-2 bg-gray-100 rounded-xl'

  .flex.flex-col.rounded-2xl.px-3
    
    .flex.flex-col.rounded-2xl.bg-gray-300.mb-4{class: "h-2/3"}
      %span.block.flex.justify-center.items-center.p-4
        Pending Evaluations
      - 2.times do 
        %input.rounded-xl.bg-gray-100.flex.flex-grow.m-3
      %span.block.flex.justify-center.items-end.p-3
        = link_to "Load All", "#", class: 'px-6 py-2 bg-gray-100 rounded-xl'
    
    .flex.flex-col.rounded-2xl.bg-gray-300.justify-evenly{class: "h-1/3"}
      %span.block.flex.justify-center.items-end
        My Calendar
      %span.block.flex.justify-center.items-end.px-2.sm:px-6.md:px-8.lg:px-10.xl:px-12.2xl:px-16.py-2
        = link_to "Edit Time Avilable", "#", class: 'px-2 sm:px-6 md:px-8 lg:px-10 xl:px-12 2xl:px-16 py-2 bg-gray-50 rounded-xl'
