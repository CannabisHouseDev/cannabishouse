-provide(:button_text, t('rapidfire.surveys.save')) 
%h3= survey.new_record? ? t('rapidfire.surveys.new_survey') : t('rapidfire.surveys.edit_survey')
= form_for survey do |f|
  - if survey.errors.any?
    %ul
      - survey.errors.full_messages.each do |message|
        %li 
          = message

  = f.label :name, t('rapidfire.surveys.name')
  %br= f.text_field :name

  %br= f.label :introduction, t('rapidfire.surveys.introduction')
  %br= f.text_area :introduction

  %br= f.submit yield(:button_text), class: "btn btn-primary"
